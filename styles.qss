}

QCheckBox::indicator:checked {
    background-color: #99aaff;  /* change color when checked */
    border: 2px solid #555;
    border-radius: 12px;
}

QCheckBox::indicator:unchecked {
    background-color: #ff9999;  /* change color when unchecked */
    border: 2px solid #555;
    border-radius: 12px;
}

/* Customize the appearance of selected items in QListWidget */
QListWidget::item:selected {
    background-color: #3B4252;
    color: #000;
    border-radius: 5px;
    text-align: center;
}

QListWidget {
    background-color: #373E4D;
    border-radius: 5px;
}

QListWidget::item {
    padding: 8px;
    font-size: 20px;
    height: 30px;
    
}

QTabWidget::tab-bar {
    alignment: center; /* Center the tab bar */
    margin: 20px;
}

QTabBar::tab {
    background: #373E4D; /* Background for each tab */
    padding: 10px 20px; /* Padding inside the tab */
    margin: 2px; /* Space between each tab */
    border-radius: 5px; /* Rounded corners */
}

QTabBar::tab:selected {
    background: #569CD6; /* Background for the selected tab */
    font-weight: bold; /* Bold text for selected tab */
}

QTabBar {
    min-height: 100px;
    padding: 10px;
}

QTabWidget::pane {
    border: 2px solid #444444; /* Border around the tab content area */
    padding: 5px; /* Padding inside the pane */
    background: #272E3D; /* Background for the tab content area */
}
