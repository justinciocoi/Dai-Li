/* Set background color for the entire window */
QMainWindow {
    background-color: #2f3440;
    color: white;
}

/* Style the labels (e.g., titles for each tab) */
QLabel {
    font-size: 18px;
    font-weight: bold;
    font-family:"Krub";
}

/* Style the buttons */
QPushButton {
    background-color: #569CD6;
    color: white;
    border-radius: 10px;
    padding: 5px 10px;
    margin-top: 5px;
}

QPushButton:hover {
    background-color: #468CC6;
    font-weight: bold;
}

/* Style the QLineEdit for task input */
QLineEdit {
    border: 1px solid #ccc;
    border-radius: 10px;
    padding: 5px;
    font-size: 20px;
    background-color: #3B4252;
    margin-bottom: 5px;
}

/* Style the QCheckBox */
QCheckBox {
    font-size: 14px;
    padding: 3px;
    height: 20px;
    font-weight: bold;
    font-family: "Noteworthy";
    text-align: center;
    border-radius: 10px;
}

